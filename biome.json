{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": ["node_modules", "dist", "legacy", "*.min.js"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "warn",
        "noArrayIndexKey": "warn",
        "noConfusingVoidType": "warn",
        "noEmptyBlockStatements": "warn",
        "noConsole": "off"
      },
      "style": {
        "useImportType": "warn",
        "useExportType": "warn",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "warn",
        "useDefaultParameterLast": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "warn"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noForEach": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}
