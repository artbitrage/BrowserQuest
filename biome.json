{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "recommended": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn",
        "noDoubleEquals": "warn",
        "noArrayIndexKey": "warn",
        "noConfusingVoidType": "warn",
        "noEmptyBlockStatements": "warn",
        "noConsole": "off"
      },
      "style": {
        "useImportType": "warn",
        "useExportType": "warn",
        "noNonNullAssertion": "warn",
        "noParameterAssign": "warn",
        "useDefaultParameterLast": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "warn"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noForEach": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}
